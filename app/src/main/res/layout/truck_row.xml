<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="417dp"
        android:layout_height="145dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardViewTruckRow"
            android:layout_width="414dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewTruckTitle"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="88dp"
                android:layout_marginBottom="9dp"
                android:text="TruckTitleModel"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textViewTruckDetailType"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewTruckPicture"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewTruckDetailType"
                android:layout_width="225dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="5dp"
                android:text="TruckDetailVehicleType"
                app:layout_constraintBottom_toTopOf="@+id/textViewTruckDetailCapacity"
                app:layout_constraintStart_toEndOf="@+id/imageViewTruckPicture"
                app:layout_constraintTop_toBottomOf="@+id/textViewTruckTitle" />

            <TextView
                android:id="@+id/textViewTruckDetailCapacity"
                android:layout_width="225dp"
                android:layout_height="28dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="16dp"
                android:text="TruckDetailCapacity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewTruckPicture"
                app:layout_constraintTop_toBottomOf="@+id/textViewTruckDetailType" />

            <ImageView
                android:id="@+id/imageViewTruckPicture"
                android:layout_width="151dp"
                android:layout_height="133dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewTruckDetailType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/truck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>